{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "outDir": "build",
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules"
  ]
}
